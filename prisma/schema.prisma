generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String?
  role         String
  createdAt    DateTime      @default(now())
  firebaseUid  String?       @unique
  anonymizedAt DateTime?
  deletedAt    DateTime?
  isDeleted    Boolean       @default(false)
  status       UserStatus    @default(ACTIVE)
  bookings     Booking[]
  guide        Guide?
  hikerProfile HikerProfile?
  reviews      Review[]
}

model Guide {
  id          String   @id @default(uuid())
  userId      String   @unique
  bio         String?
  createdAt   DateTime @default(now())
  displayName String?
  updatedAt   DateTime @updatedAt
  location    String?
  status      String   @default("ACTIVE")
  user        User     @relation(fields: [userId], references: [id])
  hikes       Hike[]
  reviews     Review[]
}

model HikerProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  bio         String?
  displayName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  location    String?
  user        User     @relation(fields: [userId], references: [id])
}

model Hike {
  id            String          @id @default(uuid())
  title         String
  description   String?
  price         Int?
  createdAt     DateTime        @default(now())
  guideId       String
  capacity      Int?
  date          DateTime?
  location      String?
  coverUrl      String?
  distance      String?
  duration      String?
  meetingTime   String?
  updatedAt     DateTime        @updatedAt
  difficulty    DifficultyLevel
  elevationGain String?
  meetingPlace  String?
  routePath     String?
  whatToBring   String?
  status        String          @default("ACTIVE")
  durationDays  Int?
  isMultiDay    Boolean         @default(false)
  bookings      Booking[]
  guide         Guide           @relation(fields: [guideId], references: [id], onDelete: Cascade)
  reviews       Review[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  hikeId    String
  status    String
  createdAt DateTime @default(now())
  hike      Hike     @relation(fields: [hikeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  guideId   String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  hikeId    String?
  tags      String[]
  guide     Guide    @relation(fields: [guideId], references: [id])
  hike      Hike?    @relation(fields: [hikeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  actorId    String?
  actorEmail String?
  action     String
  resource   String?
  resourceId String?
  details    String?
  createdAt  DateTime @default(now())
}

enum DifficultyLevel {
  EASY
  MODERATE
  HARD
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}
