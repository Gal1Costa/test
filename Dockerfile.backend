FROM node:18-alpine

WORKDIR /app

# Install build tools for native modules (if any)
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install ALL dependencies (including dev for Prisma)
RUN npm ci  # REMOVE --omit=dev

# Generate Prisma Client
RUN npx prisma generate

# Copy the rest of the application
COPY . .

EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/healthz', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Run migrations then start backend
CMD ["sh", "-c", "npx prisma migrate deploy && node src/app/index.js"]