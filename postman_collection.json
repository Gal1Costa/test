    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/healthz",
              "host": ["{{base_url}}"],
              "path": ["healthz"]
            },
            "description": "Check if backend is running"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Hikes",
      "item": [
        {
          "name": "List All Hikes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/hikes",
              "host": ["{{base_url}}"],
              "path": ["api", "hikes"]
            },
            "description": "Get all hikes (public endpoint)"
          },
          "response": []
        },
        {
          "name": "Get Hike Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/hikes/1",
              "host": ["{{base_url}}"],
              "path": ["api", "hikes", "1"]
            },
            "description": "Get details for a specific hike"
          },
          "response": []
        },
        {
          "name": "Create Hike (Guide)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-dev-user",
                "value": "{\"id\":\"dev-1\",\"email\":\"guide@local\",\"role\":\"guide\"}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Mountain Trail Adventure",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "A scenic mountain hike with breathtaking views",
                  "type": "text"
                },
                {
                  "key": "difficulty",
                  "value": "moderate",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "50",
                  "type": "text"
                },
                {
                  "key": "capacity",
                  "value": "15",
                  "type": "text"
                },
                {
                  "key": "date",
                  "value": "2024-12-25",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/hikes",
              "host": ["{{base_url}}"],
              "path": ["api", "hikes"]
            },
            "description": "Create new hike (requires guide role)"
          },
          "response": []
        },
        {
          "name": "Update Hike (Owner)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "x-dev-user",
                "value": "{\"id\":\"dev-1\",\"email\":\"guide@local\",\"role\":\"guide\"}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"price\": 60, \"capacity\": 20}"
            },
            "url": {
              "raw": "{{base_url}}/api/hikes/1",
              "host": ["{{base_url}}"],
              "path": ["api", "hikes", "1"]
            },
            "description": "Update hike details (owner only)"
          },
          "response": []
        },
        {
          "name": "Delete Hike (Owner)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "x-dev-user",
                "value": "{\"id\":\"dev-1\",\"email\":\"guide@local\",\"role\":\"guide\"}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/hikes/1",
              "host": ["{{base_url}}"],
              "path": ["api", "hikes", "1"]
            },
            "description": "Delete a hike (owner only)"
          },
          "response": []
        },
        {
          "name": "Join Hike (Hiker)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-dev-user",
                "value": "{\"id\":\"hiker-1\",\"email\":\"hiker@local\",\"role\":\"hiker\"}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/hikes/1/join",
              "host": ["{{base_url}}"],
              "path": ["api", "hikes", "1", "join"]
            },
            "description": "Join a hike (create booking)"
          },
          "response": []
        },
        {
          "name": "Leave Hike (Hiker)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "x-dev-user",
                "value": "{\"id\":\"hiker-1\",\"email\":\"hiker@local\",\"role\":\"hiker\"}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/hikes/1/join",
              "host": ["{{base_url}}"],
              "path": ["api", "hikes", "1", "join"]
            },
            "description": "Leave a hike (cancel booking)"
          },
          "response": []
        }
      ]
    },
    {
